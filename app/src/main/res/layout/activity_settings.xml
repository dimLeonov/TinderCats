                            android:textColor="@color/black"
                            android:textSize="18dp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switch_sounds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:button="@drawable/custom_switch"
                            android:thumb="@null"
                            app:track="@null" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volume"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:layout_weight="1"/>

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="8" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="344dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Like Sounds"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="5">


                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/nopeSounds"
                                >

                                <RadioButton
                                    android:id="@+id/nope1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Sound 1"
                                    android:onClick="onRadioButtonClicked"/>

                                <RadioButton
                                    android:id="@+id/nope2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Sound 2"
                                    android:onClick="onRadioButtonClicked"/>

                                <RadioButton
                                    android:id="@+id/nope3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:text="Sound 3"
                                    android:onClick="onRadioButtonClicked"/>

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="344dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Nope Sounds"
                            android:textColor="@color/black"
                            android:textSize="18dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="10dp"
                            android:orientation="vertical"
                            android:layout_weight="5">


                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:id="@+id/happySounds">

                            <RadioButton
                                android:id="@+id/happy1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Sound 1"
                                android:onClick="onRadioButtonClicked"/>

                            <RadioButton
                                android:id="@+id/happy2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Sound 2"
                                android:onClick="onRadioButtonClicked"/>

                            <RadioButton
                                android:id="@+id/happy3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="Sound 3"
                                android:onClick="onRadioButtonClicked"/>

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>






